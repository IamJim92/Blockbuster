<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('game_cover_image.jpg') %>)">
    <h1><%= @game.name %></h1>
  </div>
<div class="container mb-5">

  <% if @game.user == current_user %>
  <div class="d-flex justify-content-between my-4">
      <div>
        <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#new_movie_modal">
          add a game
        </button>
        <%= link_to "Edit here", edit_game_path(@game), class: "btn btn-edit" %>
        <%= link_to "delete this game", game_path(@game), method: :delete, class: "btn btn-cancel", data: { confirm: "Are you sure you want to delete this list?" } %>
      </div>
    </div>
  <% end %>
  <div class="container game-info w-75 d-flex justify-content-flex-start">
    <h1><%= @game.name %></h1>
    <h4><%= @game.description %></h4>
    <h6>Genre: <%= @game.genre %></h6>
    <h6>Price: Â£<%= @game.price %></h6>
    <a href="#" class="btn btn-primary">Buy now</a>
    <div class="back-btn">
    <p><%= link_to "back", games_path %></p>
  </div>
</div>
