<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Update your game</h3>
        <%= simple_form_for @game do |f| %>
          <%= f.input :name, placeholder: 'Gears of War...' %>
          <%= f.input :genre, placeholder: '', collection: Game::GENRE, value: @game.genre %>
          <%= f.input :description, placeholder: '' %>
          <%= f.input :photo, as: :file %>
          <%= f.input :price, placeholder: '' %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
